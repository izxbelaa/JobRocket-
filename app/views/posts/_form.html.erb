<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-800 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control shadow-sm border border-gray-400 rounded-md mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, rows: 4, class: "form-control shadow-sm border border-gray-400 rounded-md mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn btn-primary rounded-lg py-3 px-5 font-medium cursor-pointer" %>
  </div>
<% end %>
