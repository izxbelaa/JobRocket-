<!-- app/views/posts/index.html.erb -->
<div class="container mt-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-success text-white font-medium rounded-lg" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Posts" %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="font-weight-bold">Jobs</h1>
    <%= link_to "New post", new_post_path, class: "btn btn-dark" %>
  </div>

<div id="posts" class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="bg-purple-600 p-4 rounded-lg shadow-md">
       <% if post.image.attached? %>
          <%= image_tag post.image, class: "img-fluid rounded" %>
        <% end %>
        <h2 class="font-bold text-xl mb-2"><%= post.title %></h2>
        <p class="text-base"><%= post.body %></p>
       
        <%= link_to "Show this post", post, class: "btn btn-light mt-2" %>
      </div>
    </div>
  <% end %>
</div>
</div>
