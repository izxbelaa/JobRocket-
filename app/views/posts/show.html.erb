<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% if @post.image.attached? %>
    <%= image_tag @post.image, class: "w-full max-w-md rounded-lg shadow-md" %>
  <% else %>
    <p>No image available</p>
  <% end %>

  <h1 class="text-2xl font-bold mt-4"><%= @post.title %></h1>
  <p class="text-base mt-2"><%= @post.body %></p>

  <div class="mt-4 flex space-x-2">
    <%= link_to "Edit this post", edit_post_path(@post), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= link_to "Back to posts", posts_path, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= button_to "Delete", @post, method: :delete, class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium", data: { confirm: "Are you sure?" } %>
  </div>
</div>
